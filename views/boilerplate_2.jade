html
	link(rel="stylesheet", href="../../../../materialize-css/bin/materialize.css")
	link(rel="stylesheet", href="../../../../stylesheets/style.css")
	link(rel="stylesheet", href="https://fonts.googleapis.com/icon?family=Material+Icons")
	link(rel="stylesheet", href="http://code.ionicframework.com/ionicons/2.0.1/css/ionicons.min.css")
	script(type="text/javascript" src="../../../../../vendor/booklet-1.0.0.js")
	script(src="../../../javascripts/app.js")
	script(src="../../../javascripts/views/index.js")
	meta(charset="UTF-8")
body
		nav
			div
				.nav-wrapper &nbsp; &nbsp; &nbsp;
					a.ion-leaf(href="/" style="font-size:30px")  blogfoni
					ul#nav-mobile.right.hide-on-med-and-down
						if language
							if !username 
								li
									a.modal-trigger(href="#registerModal") #{language.MSG_REGISTER}
								li
									a.modal-trigger(href="#loginModal") #{language.MSG_LOGIN}
							else 
								li
										a(href="#") #{language.MSG_HELLO}, #{username}
								li
										a(href="../../logout") #{language.MSG_LOGOUT}
							if isAdmin
								li
										a(href="/admin") Admin Panel
		div.row
			block leftContent
			block rightContent
		//register modal
	if language
		div.modal(id="registerModal")
			div.modal-content
				h4 #{language.MSG_REGISTER}
				form(method="POST" action="../registered")
					div.input-field.col.s12
						i.material-icons.prefix perm_identity
						input#icon_prefix(name="username"  type="text" class="validate")
						label(for="icon_prefix") #{language.MSG_USERNAME}
					div.input-field.col.s12
						i.material-icons.prefix https
						input#icon_prefix(name="password"  type="password" class="validate")
						label(for="textarea1") #{language.MSG_USERNAME}
					button.btn.waves-effect.waves-light.blue(type="submit" name="action") #{language.MSG_REGISTER} 
				div.modal-footer
						a.modal-action.modal-close.waves-effect.waves-green.btn-flat(href="#!") #{language.MSG_CLOSE}
		//login modal
	if language
		div.modal(id="loginModal")
						div.modal-content
							h4 #{language.MSG_LOGIN}
							form(method="POST" action="../logged")
								div.input-field.col.s12
									i.material-icons.prefix perm_identity
									input#icon_prefix(name="username"  type="text" class="validate")
									label(for="icon_prefix") #{language.MSG_USERNAME}
								div.input-field.col.s12
									i.material-icons.prefix https
									input#icon_prefix(name="password"  type="password" class="validate")
									label(for="textarea1") #{language.MSG_PASSWORD}
								button.btn.waves-effect.waves-light.blue(type="submit" name="action") #{language.MSG_LOGIN}
						div.modal-footer
							a.modal-action.modal-close.waves-effect.waves-green.btn-flat(href="#!") #{language.MSG_CLOSE}
include footer_2